<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Points</th>
      <th>Net Money</th>
      <th>Top Place</th>
      <th>Wins</th>
      <th>Wins %</th>
      <th>Heads Up</th>
      <th>Games Played</th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.name, player %></td>
        <td><%= player.points %></td>
        <td><%= number_to_currency player.net_money, precision: 0 %></td>
        <td><%= player.top_place %></td>
        <td><%= player.wins %></td>
        <td><%= player.win_percentage.round(1) %>%</td>
        <td><%= player.heads_up %></td>
        <td><%= player.games_played %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render 'form', player: @player %>
